<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_weight="1"
        android:id="@+id/wodeguanzhu_img"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginLeft="-15dp"
        android:padding="1dp"
        android:src="@mipmap/ic_launcher"
        app:roundedCornerRadius="20dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wodeguanzhu_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="123"
            android:textColor="#f000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/wodeguanzhu_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="123"
            android:textColor="#f000"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/wodeguanzhu_tv3"
        android:layout_width="133dp"
        android:layout_height="17dp"
        android:layout_marginLeft="47dp"
        android:layout_gravity="center"
        android:text="123"
        android:textColor="#f000"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/wodeguanzhu_img2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@mipmap/raw_1499943790" />

</LinearLayout>
